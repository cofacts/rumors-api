{
  "$schema": "http://json.schemastore.org/package",
  "name": "rumors-api",
  "version": "1.0.0",
  "description": "GraphQL API server for clients like rumors-site and rumors-line-bot",
  "main": "index.js",
  "repository": {
    "url": "git@github.com:MrOrz/rumors-api.git",
    "type": "git"
  },
  "author": "MrOrz <johnsonliang7@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "pm2-dev start --timestamp process-dev.json",
    "seed": "cd test/rumors-db && npm run seed",
    "pretest": "npm run rumors-db:test",
    "test": "NODE_ENV=test ELASTICSEARCH_URL=http://localhost:62223 jest --runInBand",
    "start": "pm2 startOrRestart process.json --env production --log-date-format=\"YYYY-MM-DD HH:mm Z\" --no-daemon",
    "lint": "eslint src/.",
    "lint:fix": "eslint --fix src/.",
    "validate:sameDoc": "echo Please run 'npm run evaluate' instead. See README.md for setting up test db.",
    "clean": "rm -rf build",
    "rumors-db:pull": "cd test/rumors-db && git pull",
    "rumors-db:test": "cd test/rumors-db && ELASTICSEARCH_URL=http://localhost:62223 npm t"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.8.0",
    "@elastic/elasticsearch": "^6.8.6",
    "@grpc/proto-loader": "^0.5.0",
    "apollo-server-koa": "^2.11.0",
    "babel-plugin-rewire": "^1.2.0",
    "babel-runtime": "^6.20.0",
    "dataloader": "^2.0.0",
    "dotenv": "^8.0.0",
    "form-data": "^3.0.0",
    "google-protobuf": "^3.0.0",
    "googleapis": "^55.0.0",
    "graphql": "^15.0.0",
    "grpc": "^1.11.0",
    "kcors": "^2.2.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.0.0",
    "koa-passport": "^4.0.1",
    "koa-router": "^8.0.0",
    "koa-session2": "^2.0.0",
    "koa-static": "^5.0.0",
    "node-fetch": "^2.2.0",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.10",
    "passport-twitter": "^1.0.4",
    "pm2": "^4.0.0",
    "pug": "^2.0.3",
    "rollbar": "^2.3.7",
    "url-regex": "^5.0.0",
    "xxhashjs": "^0.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.0",
    "@babel/core": "^7.8.0",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/plugin-proposal-json-strings": "^7.8.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.0",
    "@babel/plugin-syntax-import-meta": "^7.8.0",
    "@babel/polyfill": "^7.8.0",
    "@babel/preset-env": "^7.8.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "coveralls": "^3.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-babel-module": "^5.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.0.0",
    "jest": "^25.0.0",
    "mockdate": "^2.0.1",
    "prettier": "=1.13.7"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "src"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "engines": {
    "node": ">=12"
  }
}
