{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "test/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es2018"
  },
  "include": [
    "src/**/*"
  ]
}